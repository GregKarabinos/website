  "devDependencies": {
    "gulp": "^4.0.2",
    "gulp-htmlhint": "^3.0.0",
    "gulp-imagemin": "^7.1.0",
    "gulp-rev": "^9.0.0",
    "gulp-rev-delete-original": "^0.2.3",
    "gulp-rev-rewrite": "^3.0.3"
  }
}
